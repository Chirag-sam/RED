<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDark"
    android:gravity="center">

    <ImageView
        android:id="@+id/introimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/introtext2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/introtext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="Version:"
        android:textColor="@color/white"

        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/introtext2"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/introtext3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="Developers:"
        android:textColor="@color/white"
        android:textSize="23dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/introtext3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/persons">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_person_black_24dp"
            android:tint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image1"
            android:fontFamily="sans-serif-thin"
            android:text="Chirag G Samtani"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/image1"
            android:textSize="22dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name1"
            android:text="(chiraggsam@gmail.com)"
            android:layout_toRightOf="@id/image1"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@id/image1"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_person_black_24dp"
            android:tint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:layout_toRightOf="@+id/image2"
            android:fontFamily="sans-serif-thin"
            android:text="Vijay Krishna"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/image2"
            android:textSize="22dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name2"
            android:text="(krsnvijay@gmail.com)"
            android:layout_toRightOf="@id/image1"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special thanks to Arunabha Basak for the icon!"
        android:textColor="@color/white"
        android:layout_below="@+id/persons"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"/>
</RelativeLayout>
