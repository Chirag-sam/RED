<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232B2B"
    tools:context="com.tacyllems.game.red.EasyActivity">

    <RelativeLayout
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/line">

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toLeftOf="@+id/line"
        android:id="@+id/tv"
        android:background="@color/colorPrimary"
        android:text="COLOR"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/line"
        android:id="@+id/tv2"
        android:background="@color/colorPrimary"
        android:text="TEXT"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/line"
        android:layout_below="@+id/tv"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/tabLayout">

        <TextView
            android:id="@+id/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="RED"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <cn.iwgang.countdownview.CountdownView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isShowMinute="false"
            app:isShowSecond="true"
            app:isShowMillisecond="true"
            app:timeTextColor="#ffffff"
            app:suffix=":"
            app:timeTextSize="22sp"
            app:isTimeTextBold="true"
            app:suffixGravity="bottom"
            app:suffixTextColor="#ffffff"
            app:suffixTextSize="10sp"
            android:background="#000000"
            android:id="@+id/mCountDownTimer1"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/line"
        android:layout_below="@+id/tv"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/tabLayout">

        <TextView
            android:id="@+id/colorText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="RED"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <cn.iwgang.countdownview.CountdownView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isShowMinute="false"
            app:isShowSecond="true"
            app:isShowMillisecond="true"
            app:timeTextColor="#ffffff"
            app:suffix=":"
            app:timeTextSize="22sp"
            app:isTimeTextBold="true"
            app:suffixGravity="bottom"
            app:suffixTextColor="#ffffff"
            app:suffixTextSize="10sp"
            android:background="#000000"
            android:id="@+id/mCountDownTimer2"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/circle_background_white"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:stretchColumns="0,1"
        android:id="@+id/tableLayout"
        >
        <TableRow>
            <Button
                android:id="@+id/butt1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/red_button_background"
                />

            <Button
                android:id="@+id/butt2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/blue_button_background"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/butt3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/green_colour_background"
                />

            <Button
                android:id="@+id/butt4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/yellow_button_background"
                />
        </TableRow>
    </TableLayout>

</RelativeLayout>

