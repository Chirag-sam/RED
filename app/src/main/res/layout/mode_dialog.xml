<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="SELECT MODE:"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageeasy"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageeasy"
                android:text="EASY"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagehard"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imagehard"
                android:text="HARD"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stoner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagestoner"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imagestoner"
                android:text="STONER HARD"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reflex30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagereflex"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imagereflex"
                android:text="REFLEX 30"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/doubletrouble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagedouble"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imagedouble"
                android:text="DOUBLE TROUBLE"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/multiplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagemulti"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imagemulti"
                android:text="MULTIPLAYER"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />
        </RelativeLayout>




    </LinearLayout>
</ScrollView>