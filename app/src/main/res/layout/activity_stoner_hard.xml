<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232B2B"
    tools:context="com.tacyllems.game.red.EasyActivity">

  <TextView
      android:id="@+id/colorText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/mCountDownTimer"
      android:layout_centerHorizontal="true"
      android:text="RED"
      android:textColor="@color/colorPrimary"
      android:textSize="30dp"
      android:textStyle="bold"
      />

  <cn.iwgang.countdownview.CountdownView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:isShowMinute="false"
      app:isShowSecond="true"
      app:isShowMillisecond="true"
      app:timeTextColor="#ffffff"
      app:suffix=":"
      app:timeTextSize="22sp"
      app:isTimeTextBold="true"
      app:suffixGravity="bottom"
      app:suffixTextColor="#ffffff"
      app:suffixTextSize="10sp"
      android:background="#000000"
      android:id="@+id/mCountDownTimer"
      android:layout_alignParentRight="true"
      android:layout_marginTop="20dp"
      android:layout_marginRight="10dp"/>

  <TextView
      android:id="@+id/score"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"
      android:text="0"
      android:textColor="@color/colorAccent"
      android:textSize="30dp"
      android:textStyle="bold"
      />

  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:gravity="center"
      android:stretchColumns="0,1"
      android:id="@+id/tableLayout"
      >
    <TableRow>
      <Button
          android:id="@+id/butt1"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:background="@drawable/red_button_background"
          />

      <Button
          android:id="@+id/butt2"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:background="@drawable/blue_button_background"
          />
    </TableRow>
    <TableRow>
      <Button
          android:id="@+id/butt3"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:background="@drawable/green_colour_background"
          />

      <Button
          android:id="@+id/butt4"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:background="@drawable/yellow_button_background"
          />
    </TableRow>
  </TableLayout>

</RelativeLayout>
