<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDark"
    tools:context="com.example.chirag.red.StartActivity"
    >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/start"
      android:layout_centerHorizontal="true"
      android:layout_margin="60dp"
      android:gravity="center"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:srcCompat="@drawable/ic_painter_palette"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="RED"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        />

  </LinearLayout>
  <Button
      android:id="@+id/start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:background="@drawable/button_background"
      android:elevation="5dp"
      android:padding="16dp"
      android:text="START"
      android:textColor="@color/colorPrimary"
      android:textSize="24dp"
      />
  <android.support.v7.widget.AppCompatSpinner
      android:id="@+id/spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/start"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:entries="@array/modes"
      style="@style/Spinner"
      >

  </android.support.v7.widget.AppCompatSpinner>
  <ImageButton
      android:id="@+id/ads"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_margin="10dp"
      android:background="?selectableItemBackgroundBorderless"
      android:scaleType="fitXY"
      app:srcCompat="@drawable/ic_attach_money_black_24dp"
      />
  <ImageButton
      android:id="@+id/high"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignLeft="@+id/start"
      android:layout_below="@id/spinner"
      android:layout_marginTop="15dp"
      android:background="?selectableItemBackgroundBorderless"
      android:scaleType="fitXY"
      app:srcCompat="@drawable/ic_show_chart_black_24dp"
      />
  <ImageButton
      android:id="@+id/aboutus"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_margin="10dp"
      android:background="?selectableItemBackgroundBorderless"
      android:scaleType="fitXY"
      app:srcCompat="@drawable/ic_info_black_24dp"
      />
  <ImageButton
      android:id="@+id/mute"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignRight="@+id/start"
      android:layout_below="@id/spinner"
      android:layout_marginTop="15dp"
      android:background="?selectableItemBackgroundBorderless"
      android:scaleType="fitXY"
      app:srcCompat="@drawable/ic_volume_off_black_24dp"
      />


</RelativeLayout>
