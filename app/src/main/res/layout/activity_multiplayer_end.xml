<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tacyllems.game.red.MultiplayerEnd"
    android:id="@+id/rel">

    <TextView
        android:id="@+id/p1score"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:rotation="90"
        android:text="30"
        android:textSize="30dp"
        android:background="@drawable/button_background_white"
        android:gravity="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:rotation="90"
        android:text="Player 2 won!!"
        android:textSize="30dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/p2score"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dp"
        android:rotation="90"
        android:text="40"
        android:textSize="30dp"
        android:background="@drawable/button_background_white"
        android:gravity="center"
        android:textColor="@color/white"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/winner"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background_white"
            android:rotation="90"
            android:foreground="@drawable/home_white"
            android:layout_marginBottom="20dp"/>

        <ImageButton
            android:id="@+id/playagain"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/home"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background_white"
            android:rotation="90"
            android:textColor="@color/white"
            android:foreground="@drawable/refresh_white"/>
    </RelativeLayout>

</RelativeLayout>
