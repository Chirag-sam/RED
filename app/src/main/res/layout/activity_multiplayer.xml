<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tacyllems.game.red.Multiplayer"
    android:background="#232B2B"
    android:id="@+id/rel"
    >
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:stretchColumns="0,1"
        android:rotation="180"
        >
        <TableRow>
            <Button
                android:id="@+id/rlred"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/RED"
                />

            <Button
                android:id="@+id/rlyell"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/YELLOW"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/rlblu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/BLUE"
                />

            <Button
                android:id="@+id/rlgree"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/GREEN"
                />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:text="RED"
        android:rotation="180"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <cn.iwgang.countdownview.CountdownView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowMillisecond="true"
        app:timeTextColor="#ffffff"
        app:suffix=":"
        app:timeTextSize="22sp"
        app:isTimeTextBold="true"
        app:suffixGravity="bottom"
        app:suffixTextColor="#ffffff"
        app:suffixTextSize="10sp"
        android:id="@+id/mCountDownTimer"
        android:layout_centerVertical="true"
        android:rotation="90"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tableLayout"
        android:rotation="180"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:stretchColumns="0,1"
        >
        <TableRow>
            <Button
                android:id="@+id/rlred1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/RED"
                />

            <Button
                android:id="@+id/rlyell1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/YELLOW"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/rlblu1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/BLUE"
                />

            <Button
                android:id="@+id/rlgree1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/GREEN"
                />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/colorText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableLayout1"
        android:layout_centerHorizontal="true"
        android:text="RED"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/tableLayout1"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/mCountDownTimer"
        android:layout_height="2dp"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        ></RelativeLayout>



</RelativeLayout>
